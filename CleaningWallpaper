using System;
using System.Collections.Generic;

public class Solution 
{
    public struct Position(int row, int col)
    {
        public int Row = row;
        public int Col = col;
    }
    
    public int[] solution(string[] wallpaper) 
    {
        int[] answer = new int[] {};
        
        List<Position> filePosList = new List<Position>();
        int minRow = 50, minCol = 50, maxRow = -1, maxCol = -1;
        
        //Initialize FilePosList
        for (int i = 0; i < wallpaper.Length; i++)
        {
            for (int k = 0; k < wallpaper[i].Length; k++)
            {
                if (wallpaper[i][k] == '#')
                {
                    Position curFilePos = new Position(i, k);
                    filePosList.Add(curFilePos);
                }
            }
        }
        
        for (int i = 0; i < filePosList.Count; i++)
        {
            Position curPos = filePosList[i];
            int curRow = curPos.Row;
            int curCol = curPos.Col;
            
            if (curRow < minRow)
            {
                minRow = curRow;
            }
            
            if (curRow > maxRow)
            {
                maxRow = curRow;
            }
            
            if (curCol < minCol)
            {
                minCol = curCol;
            }
            
            if (curCol > maxCol)
            {
                maxCol = curCol;
            }
        }
        
        //have to include last file, so add one each max positions
        answer = new int[] { minRow, minCol, maxRow + 1, maxCol + 1 };
        return answer;
    }
}
